<div class="container">

	<h1>Eat-Da-Burger</h1>
	<div class="row">
		<div class="col-md-12">
			{{!-- public folder is static --}}
			<img src="/assets/img/burger.png">
		</div>
	</div>
	{{!-- list of uneaten burgers --}}
	<div class="row" id="burgers-div">
		<div class="col-md-4" id="burgers">
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<p>
								{{this.id}}. {{this.burger_name}}

								<form action="index/update/{{this.id}}?_method=PUT" method="POST" class="button-size">
									<input type="hidden" name="devour" value="1">
									<button type="submit">Devour It!</button>
								</form>
							</p>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	
		<div class="col-md-4" id="eaten-burgers">
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<p>
								{{this.id}}. {{this.burger_name}}
							</p>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
	
	<div class="row">
		<div class="col-md-12" id="burger-text-area">
			<form class="create-update-form" method="POST" action="index/create">
				<textarea type="text" name="burger_name" placeholder="enter new burger here"></textarea>
				<button type="submit">Submit</button>
			</form>
		</div>
	</div>

</div> {{!-- end of container div --}}
