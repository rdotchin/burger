<img src="./../../public/assets/img/burger.png">

<h1>Eat-Da-Burger</h1>

<ul>
	{{#each burgers}}
		<li>
			<p>
				{{this.id}}, {{this.burger_name}}

				<form action="/{{this.id}}?_method=PUT" method="POST" class="button-size">
					<button type="submit">Devour It!</button>
				</form>
			</p>
		</li>
	{{/each}}
</ul>

<ul>
	{{#each eatenBurgers}}
		<li>
			<p>
				{{this.id}}, {{this.burger_name}}
			</p>
		</li>
	{{/each}}
</ul>

<form method="POST" action="/" class="button-size">
	<input type="text" name="id" placeholder="id">
	<textarea type="text" name="newBurger" placeholder="enter new burger here"></textarea>
	<button type="submit">Submit</button>
</form>

